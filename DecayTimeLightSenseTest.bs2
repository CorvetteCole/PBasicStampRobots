' {$STAMP BS2}
' {$PBASIC 2.5}

tLeft          VAR     Word
tRight         VAR     Word



DO

  HIGH 6
  PAUSE 1
  RCTIME 6, 1, tLeft

  HIGH 3
  PAUSE 1
  RCTIME 3, 1, tRight

  ' Display result
  DEBUG HOME, "tLeft = ", DEC5 tLeft, "  ", "tRight = ", DEC5 tRight
  IF (0<tLeft) AND (tLeft<5) THEN HIGH 1
  IF (0<tRight) AND (tRight<5) THEN HIGH 0
  IF (20<tLeft) AND (tLeft<700) THEN LOW 1
  IF (20<tRight) AND (tRight<400) THEN LOW 0
  PAUSE 100

LOOP